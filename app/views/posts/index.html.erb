<div class="container clearfix">

  <% flash.each do |message_type, message| %>
    <div class="success-message">
      <%= message %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-3">
     	<%= render 'users/profile', user: current_user %>
      <%= render 'posts/create', post: @post %>
    </div>

    <div class="col-md-9">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
	      <thead>
          <tr>
	  	      <th></th>
	  	      <th>Title</th>
	  	      <th>Opinion</th>
	        </tr>
        </thead>
	        <% @posts.each do |post| %>
          <tr>
            <td>
              <% if post.user.image_id? %>
                <%= attachment_image_tag post.user, :image, :fill,40,40, format:'jpeg' %>
              <% else %>
                <%= image_tag "no_image.jpg", size: '40x40' %>
              <% end %>
            </td>
            <td>
              <%= link_to post.title, post_path(post.id) %>
            </td>
            <td><%= post.body %></td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>