<body>
<%= render 'root/header'%>
 <div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h2>Log in</h2>

 <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg,class: 'item', :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autocomplete: "on" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

        <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
        <% end %>

      <div class="actions">
       <%= f.submit "Log in" %>
      </div>
      <% end %>
    </div>
  </div>

  <%= render "devise/shared/links" %>
  <%= render 'root/footer'%>
 </div>
</body>