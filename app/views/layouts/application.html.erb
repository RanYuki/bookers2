<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= csrf_meta_tags %>
     <% if request.path_info == "/posts" %>
     <%=raw "<meta http-equiv='refresh' content='60'>" %>
     <% end %>

  </head>

  <body>
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
              <nav class="nav navbar-nav title navbar-left">
                <p class="nav-title">Bookers</p>
              </nav>

              <ul class="nav navbar-nav navbar navbar-right">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to user_path(current_user) do %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to users_path do %>
                    <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to posts_path do %>
                    <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"> Logout</span>
                    <% end %>
                  </li>

                <% else %>
                  <li>
                    <%= link_to root_path do %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to root_path  do %>
                    <span class="glyphicon glyphicon-link" aria-hidden="true"> About</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path do %>
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"> Sign up</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_session_path do %>
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"> Login</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
        </div>
      </header>

      <%= yield %>

      <footer>
        <div class="container">
          <div class="row">
            <div class="col-xs-3 col-md-offset-9">
              <p class="footer-text">CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>

  </body>
</html>
